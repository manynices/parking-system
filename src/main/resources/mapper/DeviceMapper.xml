<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.experiment.parkingsystem.mapper.DeviceMapper">

    <insert id="insert" parameterType="com.experiment.parkingsystem.entity.Device">
        INSERT INTO device (device_id, device_type, device_no, installation_location, parking_area, status)
        VALUES (#{deviceId}, #{deviceType}, #{deviceNo}, #{installationLocation}, #{parkingArea}, #{status})
    </insert>

    <select id="findById" resultType="com.experiment.parkingsystem.entity.Device">
        SELECT * FROM device WHERE device_id = #{deviceId}
    </select>

    <select id="findByCriteria" resultType="com.experiment.parkingsystem.entity.Device">
        SELECT * FROM device
        <where>
            <if test="deviceType != null and deviceType != ''">
                AND device_type = #{deviceType}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
            <if test="parkingArea != null and parkingArea != ''">
                AND parking_area = #{parkingArea}
            </if>
        </where>
        ORDER BY device_id ASC
    </select>

    <update id="update" parameterType="com.experiment.parkingsystem.entity.Device">
        UPDATE device
        <set>
            <if test="status != null">status = #{status},</if>
            <!-- 允许将备注清空 -->
            <if test="faultRemark != null">fault_remark = #{faultRemark},</if>
        </set>
        WHERE device_id = #{deviceId}
    </update>

    <select id="findMaxDeviceId" resultType="string">
        SELECT MAX(device_id) FROM device
    </select>

</mapper>