<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.experiment.parkingsystem.mapper.ParkingSpaceMapper">
    <select id="findBySpaceNo" resultType="com.experiment.parkingsystem.entity.ParkingSpace">
        SELECT * FROM parking_space WHERE space_no = #{spaceNo}
    </select>
    <update id="update" parameterType="com.experiment.parkingsystem.entity.ParkingSpace">
        UPDATE parking_space
        <set>
            <if test="status != null">status = #{status},</if>
            vehicle_id = #{vehicleId}
        </set>
        WHERE space_no = #{spaceNo}
    </update>
    <select id="findByCriteria" resultType="com.experiment.parkingsystem.entity.ParkingSpace">
        SELECT * FROM parking_space
        <where>
            <if test="parkingArea != null and parkingArea != ''">AND parking_area = #{parkingArea}</if>
            <if test="status != null and status != ''">AND status = #{status}</if>
        </where>
        ORDER BY space_no ASC
    </select>
    <select id="countByAreaAndStatus" resultType="long">
        SELECT COUNT(*) FROM parking_space
        <where>
            <if test="parkingArea != null and parkingArea != ''">AND parking_area = #{parkingArea}</if>
            <if test="status != null and status != ''">AND status = #{status}</if>
        </where>
    </select>
</mapper>